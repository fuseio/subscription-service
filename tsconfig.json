{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "@services/*": ["services/*"],
            "@filters/*": ["filters/*"],
            "@utils/*": ["utils/*"],
            "@controllers/*": ["controllers/*"],
            "@constants/*": ["constants/*"],
            "@models/*": ["models/*"]
        },
        
    },
    "exclude": ["test"]
}
